<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/background" />

    <ImageView
        android:id="@+id/network_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/small_margin"
        android:contentDescription="@string/network_state_icon" />

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_name_text_view"
            style="@style/HugeTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start" />

        <ImageView
            android:id="@+id/statistics_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="0"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/statistics"
            android:padding="@dimen/padding"
            android:src="@drawable/statistics" />
    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_header"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/only_choose_figure_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/figures"
                android:drawableLeft="@drawable/figures"
                android:text="@string/only_choose_figure_game" />

            <Button
                android:id="@+id/only_choose_color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/figures"
                android:drawableLeft="@drawable/figures"
                android:text="@string/only_choose_color_game" />

            <Button
                android:id="@+id/only_choose_letter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/letters"
                android:drawableLeft="@drawable/letters"
                android:text="@string/only_choose_letter_game" />

            <Button
                android:id="@+id/only_draw_figure_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/figures"
                android:drawableLeft="@drawable/figures"
                android:text="@string/only_draw_figure_game" />

            <Button
                android:id="@+id/only_draw_letter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/letters"
                android:drawableLeft="@drawable/letters"
                android:text="@string/only_draw_letter_game" />

            <Button
                android:id="@+id/figure_game_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/figures"
                android:drawableLeft="@drawable/figures"
                android:text="@string/figure_game" />

            <Button
                android:id="@+id/letter1_game_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/letters"
                android:drawableLeft="@drawable/letters"
                android:text="@string/letter1_game" />

            <Button
                android:id="@+id/letter2_game_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:drawableStart="@drawable/letters"
                android:drawableLeft="@drawable/letters"
                android:text="@string/letter2_game" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
