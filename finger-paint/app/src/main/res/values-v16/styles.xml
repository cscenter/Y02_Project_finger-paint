<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textColor">#CC000000</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/marmelad</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HugeTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/marmelad</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="NormalTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/marmelad</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="SmallTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/marmelad</item>
    </style>
</resources>